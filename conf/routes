#Metadata
#POST	/add_sensor				  controllers.MetadataController.addSensor()
POST	/add_sensor				  controllers.SensorController.addSensor()
POST	/update_sensor			  controllers.SensorController.updateSensor()
GET 	/get_sensor/:sensor_name/json	controllers.SensorController.getSensor(sensor_name: String, format: String="json")
GET 	/get_sensor/:sensor_name/csv	controllers.SensorController.getSensor(sensor_name: String, format: String="csv")
GET 	/get_all_sensors/json	controllers.SensorController.getAllSensors(format: String="json")
GET 	/get_all_sensors/csv	controllers.SensorController.getAllSensors(format: String="csv")

POST	/add_device 			controllers.MetadataController.addDevice()
POST	/add_sensor_category		controllers.SensorCategoryController.addSensorCategory()
POST	/update_sensor_category		controllers.SensorCategoryController.updateSensorCategory()
GET		/get_sensor_category/:sensor_category_name/json		controllers.SensorCategoryController.getSensorCategory(sensor_category_name: String, format: String="json")

# WorkFlow
POST	/workflow/							controllers.WorkFlowRunnerController.changeInterval()
GET		/workflow/							controllers.WorkFlowRunnerController.index(format:String = "html")
GET		/workflow.json						controllers.WorkFlowRunnerController.index(format:String = "json")
