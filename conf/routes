# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


# SensorReading
GET		/sensors/:deviceId/:timeStamp/:sensorType		controllers.SensorReading.search(deviceId: String, timeStamp: Long, sensorType: String)
POST	/sensors/				  			controllers.SensorReading.add(publish:Boolean = false)
POST	/sensors				  			controllers.SensorReading.add(publish:Boolean = false)
POST	/sensors_save/				  		controllers.SensorReading.add(publish:Boolean = false)
POST	/sensors_save				  		controllers.SensorReading.add(publish:Boolean = false)

# WorkFlow
POST	/workflow/							controllers.WorkFloweRunnerController.changeInterval()
GET		/workflow/							controllers.WorkFloweRunnerController.index(format:String = "html")
GET		/workflow.json						controllers.WorkFloweRunnerController.index(format:String = "json")
